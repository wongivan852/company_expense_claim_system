# Django Environment Configuration for CG Global Entertainment Ltd
# Expense Claim Management System - Docker Configuration

# Basic Django Settings
SECRET_KEY=django-expense-claim-system-docker-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration (using SQLite for development)
USE_SQLITE=True
DB_ENGINE=django.db.backends.postgresql
DB_NAME=expense_claim_db
DB_USER=postgres
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# Timezone for Hong Kong/China operations
TIME_ZONE=Asia/Hong_Kong

# CORS Configuration - Updated for port 8084
CORS_ALLOWED_ORIGINS=http://localhost:8084,http://127.0.0.1:8084,http://0.0.0.0:8084

# Redis Configuration - Updated for Docker service
REDIS_URL=redis://redis:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@cgge.com

# Security Settings (set to True in production)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False
